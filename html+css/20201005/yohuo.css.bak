
/*youhuo.css    用于对youhuo.html文件做修饰的*/


#nav_box{
	width:1000px;
	background:red;
	margin:0 auto;
}
#nav_box ul{
	width:1000px;
	height:34px;
}

#nav_box ul li,#nav_box ol li{
	float:left;
}
#nav_box ul{
	background-color:#0d0d0d;
}
#nav_box ul li{
	padding:2px 2px 0;
	line-height:30px;
	border-right:1px solid rgba(255,255,255,.5);
	position:relative;/*用来改变div的位置*/
}
#nav_box ul li a{
	color:black;
	display:block;
	padding:0 20px 2px 10px;
	font-size:14px;
	position:relative;
	color:white;
}
#nav_box ul li a::after{
	content:"";
	display:block;
	line-height:0;
	width:0;
	border:3px solid transparent;
	border-top-color:rgba(255,255,255,.3);
	position:absolute;
	right:7px;
	top:50%;
	margin-top:-1px;

}

#nav_box ul li.none a::after{
	border:none;
}
#nav_box ul li div{
	width:200px;
	border:2px solid black;
	border-top:none;
	border-bottom:none;
	height:100px;
	background-color:white;
	display:none;
	position:absolute;
	left:0;
	top:34px;
}


#nav_box ul li:hover{
	border-color:transparent;
}
#nav_box ul li:hover a{
	color:black;
	background-color:white;
}
#nav_box ul li:hover a::after{
	border-top-color:#000;
}
#nav_box ul li:hover div{
	display:block;
}